@model kompiuteriuRinkykla.Models.Computer
@using kompiuteriuRinkykla.Helpers;

@{
    ViewData["Title"] = "Create";
    ComputerHelper computerHelper = new ComputerHelper();
}

<h2>Create</h2>

<h4>Computer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Purpose" class="control-label"></label>
                <select asp-for="Purpose" asp-items="computerHelper.PcPurposes" class="form-control"></select>
                <span asp-validation-for="Purpose" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label class="control-label"></label>
                <select name="data_storage" asp-items="computerHelper.DataStorage" class="form-control"></select>
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label"></label>
                <select name="rams" asp-items="computerHelper.Rams" class="form-control"></select>
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label"></label>
                <select name="processors" asp-items="computerHelper.Processors" class="form-control"></select>
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label"></label>
                <select name="computer_case" asp-items="computerHelper.ComputerCases" class="form-control"></select>
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label"></label>
                <select name="motherboards" asp-items="computerHelper.Motherboards" class="form-control"></select>
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label"></label>
                <select name="gpus" asp-items="computerHelper.Gpus" class="form-control"></select>
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label"></label>
                <select name="psus" asp-items="computerHelper.Psus" class="form-control"></select>
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
