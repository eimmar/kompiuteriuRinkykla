@model kompiuteriuRinkykla.Models.Computer
@using kompiuteriuRinkykla.Helpers;

@{
    ViewData["Title"] = "Surinkti kompiuterį";
    ComputerHelper computerHelper = new ComputerHelper(Model);
}

<h2>Surinkti kompiuterį</h2>

<h4>Kompiuteris</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Pavadinimas</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Purpose" class="control-label">Paskirtis</label>
                <select asp-for="Purpose" asp-items="computerHelper.PcPurposes" class="form-control"></select>
                <span asp-validation-for="Purpose" class="text-danger"></span>
            </div>
            <div class="pc-parts">
                <div class="form-group">
                    <label class="control-label">Duomenų talpykla</label>
                    <select name="data_storage" asp-items="computerHelper.DataStorage" class="form-control">
                        <option value="">Pasirinkite</option>
                    </select>
                    <span asp-validation-for="Purpose" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">RAM</label>
                    <select name="rams" asp-items="computerHelper.Rams" class="form-control">
                        <option value="">Pasirinkite</option>
                    </select>
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Procesorius</label>
                    <select name="processors" asp-items="computerHelper.Processors" class="form-control">
                        <option value="">Pasirinkite</option>
                    </select>
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Kompiuterio korpusas</label>
                    <select name="computer_case" asp-items="computerHelper.ComputerCases" class="form-control">
                        <option value="">Pasirinkite</option>
                    </select>
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Motininė plokštė</label>
                    <select name="motherboards" asp-items="computerHelper.Motherboards" class="form-control">
                        <option value="">Pasirinkite</option>
                    </select>
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Vaizdo plokštė</label>
                    <select name="gpus" asp-items="computerHelper.Gpus" class="form-control">
                        <option value="">Pasirinkite</option>
                    </select>
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Maitinimo blokas</label>
                    <select name="psus" asp-items="computerHelper.Psus" class="form-control">
                        <option value="">Pasirinkite</option>
                    </select>
                    <span class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Surinkti kompiuterį" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="row suggested-parts-row hidden">
    <h2>Rekomenduojame</h2>
    <div class="col-lg-12">
        <table class="table">
            <thead>
                <tr>
                    <th colspan="2">
                        Detalė
                    </th>
                    <th>
                        Gamintojas
                    </th>
                    <th>
                        Modelis
                    </th>
                    <th>
                        Prekės kodas
                    </th>
                    <th>
                        Kaina
                    </th>
                    <th>
                        Likutis
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody class="suggested-parts">
            </tbody>
        </table>
    </div>
</div>

<div>
    <a asp-action="Index">Atgal į sąrašą</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
